pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "yourdockerhubusername/messaging-app"
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling code from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/Gabrieledesie/alx-backend-python.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                sh '''
                    cd messaging_app
                    python3 -m pip install -r requirements.txt || echo "No requirements.txt found"
                    python3 -m pip install pytest pytest-django pytest-cov
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                echo 'Running tests with pytest...'
                sh '''
                    cd messaging_app
                    python3 -m pytest --junitxml=test-results.xml --cov=. --cov-report=html || true
                '''
            }
        }
        
        stage('Generate Report') {
            steps {
                echo 'Generating test report...'
                junit 'messaging_app/test-results.xml'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh '''
                    cd messaging_app
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} . || echo "Docker build skipped"
                    docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest || true
                '''
            }
        }
        
        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image (skipped - no credentials)...'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed!'
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
